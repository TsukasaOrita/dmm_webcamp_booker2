<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>
 
  <div class="form_group">
   <%= f.label :title %><br>
   <%= f.text_field :title %><br>
  </div>

  <div class="form-group" >
   <%= f.label :opnion %><br>
   <%= f.text_area :body %><br>
  </div>

  <%= f.submit"Create Book", class: "btn btn-success" %>
<% end %>
